<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <!--  <color android:color="#00FFFF" />-->
        <shape>
            <gradient android:endColor="#FFCA28" android:startColor="#FFCA28"
                android:angle="270" />
            <stroke android:width="1dp" android:color="#747170" />
            <corners android:radius="2dp" />
            <padding android:left="0dp" android:top="0dp"
                android:right="0dp" android:bottom="0dp" />
        </shape>
    </item>
    <item>
        <!--  <color android:color="#00FFFF" />-->
        <shape>
            <gradient android:endColor="#FAFAFA" android:centerColor="#FAFAFA" android:startColor="#FFECB3"
                android:angle="270" />
            <stroke android:width="1dp" android:color="#747170" />
            <corners android:radius="2dp" />
            <padding android:left="0dp" android:top="0dp"
                android:right="0dp" android:bottom="0dp" />
        </shape>
    </item>
</selector>