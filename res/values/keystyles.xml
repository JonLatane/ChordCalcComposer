<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="Keyboard">
	    <item name="android:layout_height">290dp</item>
    </style>
    <style name="KeyboardSmall">
	    <item name="android:layout_height">145dp</item>
    </style>
    <!--              -->
    <!-- PHONE CONFIG -->
	<!--              -->
	<!-- Basic white and black key setups.  Black keys have to be a varying width to look good -->
    <style name="WhiteKeySmall" parent="KeyboardSmall">
    	<item name="android:layout_width">60dp</item>
	    <item name="android:layout_alignParentBottom">true</item>
	    <item name="android:background">@drawable/whitekey</item>
	</style>
	
    <style name = "BlackKeySmall">
        <item name="android:background">@drawable/blackkey</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>
    
    <!-- C#, D# -->
    <style name="CSharpSmall" parent="BlackKeySmall">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_marginLeft">36dp</item>
	</style>
	<style name="DSharpSmall" parent="BlackKeySmall">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_marginLeft">36dp</item>
        <item name="android:layout_marginRight">36dp</item>
	</style>
	
	<!-- F#, G#, A# -->
    <style name="FSharpSmall" parent="BlackKeySmall">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_marginLeft">34dp</item>
	</style>
    <style name="GSharpSmall" parent="BlackKeySmall">
        <item name="android:layout_width">34dp</item>
        <item name="android:layout_marginLeft">34dp</item>
	</style>
	<style name="ASharpSmall" parent="BlackKeySmall">
        <item name="android:layout_width">34dp</item>
        <item name="android:layout_marginLeft">34dp</item>
        <item name="android:layout_marginRight">35dp</item>
	</style>
	
	<!-- A0, A#0 in specific require specifics that they are the leftmost key -->
    <style name="A0Small" parent="WhiteKeySmall">
	    <item name="android:layout_alignParentLeft">true</item>
	</style>
	
    <style name="AS0Small" parent="BlackKeySmall">
        <!-- <item name="android:layout_marginLeft">78dp</item> -->
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_marginLeft">48dp</item>
        <item name="android:layout_marginRight">36dp</item>
	    <item name="android:layout_alignParentLeft">true</item>
	</style>
	
    <!--               -->
    <!-- TABLET CONFIG -->
	<!--               -->
    <!-- Basic white and black key setups.  Black keys have to be a varying width to look good -->
    <style name="WhiteKey" parent="Keyboard">
    	<item name="android:layout_width">90dp</item>
	    <item name="android:layout_alignParentBottom">true</item>
	    <item name="android:background">@drawable/whitekey</item>
	</style>
	
    <style name = "BlackKey">
        <item name="android:background">@drawable/blackkey</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>
    
    <!-- C#, D# -->
    <style name="CSharp" parent="BlackKey">
        <item name="android:layout_width">54dp</item>
        <item name="android:layout_marginLeft">54dp</item>
	</style>
	<style name="DSharp" parent="BlackKey">
        <item name="android:layout_width">54dp</item>
        <item name="android:layout_marginLeft">54dp</item>
        <item name="android:layout_marginRight">54dp</item>
	</style>
	
	<!-- F#, G#, A# -->
    <style name="FSharp" parent="BlackKey">
        <item name="android:layout_width">52dp</item>
        <item name="android:layout_marginLeft">51dp</item>
	</style>
    <style name="GSharp" parent="BlackKey">
        <item name="android:layout_width">52dp</item>
        <item name="android:layout_marginLeft">51dp</item>
	</style>
	<style name="ASharp" parent="BlackKey">
        <item name="android:layout_width">52dp</item>
        <item name="android:layout_marginLeft">51dp</item>
        <item name="android:layout_marginRight">51dp</item>
	</style>
	
	<!-- A0, A#0 in specific require specifics that they are the leftmost key -->
    <style name="A0" parent="WhiteKey">
	    <item name="android:layout_alignParentLeft">true</item>
	</style>
	
    <style name="AS0" parent="BlackKey">
        <!-- <item name="android:layout_marginLeft">78dp</item> -->
        <item name="android:layout_width">52dp</item>
        <item name="android:layout_marginLeft">77dp</item>
        <item name="android:layout_marginRight">51dp</item>
	    <item name="android:layout_alignParentLeft">true</item>
	</style>
</resources>