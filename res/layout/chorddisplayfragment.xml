    		    android:id="@+id/ninth"
            	android:layout_width="wrap_content"
    			android:layout_height="match_parent"/>
    		<TextView 
    		    android:id="@+id/tenth"
            	android:layout_width="wrap_content"
    			android:layout_height="match_parent"/>
    		<TextView 
    		    android:id="@+id/eleventh"
            	android:layout_width="wrap_content"
    			android:layout_height="match_parent"/>
        </LinearLayout>
    </HorizontalScrollView>
	<TextView 
    		    android:id="@+id/bestChord"
            	android:layout_width="wrap_content"
    			android:layout_height="match_parent"/>
</RelativeLayout>